@using Autorepair.Models

@model LogOnModel

@{
    ViewBag.Title = "LogOn";
}

<h2>LogOn</h2>

@using (Html.BeginForm("Logon", "Home", new { ReturnUrl = ViewBag.ReturnAddress }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "The following errors occurred:", "p");

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div class="form-group">
        <div class="checkbox-inline">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
    </div>

    <div class="form-group top-buffer-md">
        <input type="submit" value="Log on" class="btn btn-default btn-block" />
    </div>
}
